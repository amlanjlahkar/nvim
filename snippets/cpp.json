{
  "Define Class": {
    "prefix": "class",
    "body": [
      "class ${1:class_name} {\n  ${2:access_specifier|private,public,protected|}:\n    $3\n} ${0:obj};"
    ],
    "description": "Create a class"
  },

  "Define Function": {
    "prefix": "func",
    "body": [
      "${1:return_type} ${2:function_name} {\n  ${0:code}\n}"
    ]
  },

  "For Loop": {
    "prefix": "for",
    "body": [
      "for ( ${1:local_var} = $2; ${3:condition}; ${4:iteration} ) {\n  ${0:code}\n}"
    ],
    "description": "Create a for loop"
  },

  "Main Function": {
    "prefix": "main",
    "body": "int main(void) {\n  $0\n  return 0;\n}",
    "description": "Define main function"
  }
}
